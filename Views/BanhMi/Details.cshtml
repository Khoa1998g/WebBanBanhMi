@model WebBanBanhMi.Models.BanhMi
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>THÔNG TIN CHI TIẾT BÁNH MÌ </h3>
<div>
    <div style="width:40%; float:left; border-left:dotted 1px; border-color:azure">
        <img alt="@Model.Name" src="~/Content/Image/@Model.Image" style="width:100%" />
    </div>
    <div style="width: 60%; float: left; margin-right:500px">
        <h4 style="font-weight: bold; color: red"> Tên: @Model.Name</h4>
        <p style="text-align:justify">
            <span style="font-weight:bold">
                Mô tả:
            </span>@Model.Description
        </p>
        <p style="font-weight:bold">
            Giá bán: <span style="color:red; font-size:16px">
                @Model.Price
                VNĐ
            </span>
        </p>
    </div>
    <div>
    </div>
</div>