<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Bánh Mì</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/assets/images/icon1.png" />

    <!-- CSS
    ============================================ -->
    <!-- Vendor CSS (Contain Bootstrap, Icon Fonts) -->
    <link rel="stylesheet" href="~/Content/assets/css/vendor/font-awesome.min.css" />
    <link rel="stylesheet" href="~Content/assets/css/vendor/Pe-icon-7-stroke.css" />

    <!-- Plugin CSS (Global Plugins Files) -->
    <link rel="stylesheet" href="~/Content/assets/css/plugins/animate.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/plugins/jquery-ui.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/plugins/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/plugins/nice-select.css">
    <link rel="stylesheet" href="~/Content/assets/css/plugins/magnific-popup.min.css" />

    <!-- Style CSS -->
    <link rel="stylesheet" href="~Content/assets/css/style.css">
</head>
<body>
    <div class="main-wrapper">
        <main class="main-content">
            <div class="breadcrumb-area breadcrumb-height" data-bg-image="~/Content/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
                <div class="container h-100">
                    <div class="row h-100">
                        <div class="col-lg-12">
                            <div class="breadcrumb-item">
                                <img src="~/Content/assets/images/123.jpg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">

                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-
                            target=".navbar-collapse" title="more options">

                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Trang Chủ", "Index", "BanhMi", new { area = "" }, new
                    {
                        @class =
                                                  "navbar-brand"
                    })
                </div>
                <div class="navbar-collapse collapse pull-right">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Giỏ hàng", "Index", "ShoppingCart")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <!-- Content row -->
        <div class="container">
            <div class="row">
                <!-- SIDEBAR Open -->
                <div id="content-left" class="col-2 col-lg-2">
                    @Html.Action("GetCategory", "BanhMi")
                </div>
                <!-- right content box -->
                <div id="content-right" class="col-lg-10 container">

                    <!-- Popup begin-->
                    <!-- Popup end -->
                    @RenderBody()
                </div>
            </div>
        </div>
        <!-- Begin Footer Area -->
        <div class="footer-area">
            <div class="footer-top section-space-y-axis-100 text-black" data-bg-color="#e5ddcc">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-6">
                        </div>
                        <div class="col-lg-2 offset-lg-1 col-md-6 pt-10 pt-lg-0">
                            <div class="widget-item">
                                <h3 class="widget-title mb-5">Cửa Hàng</h3>
                                <ul class="widget-list-item">
                                    <li>
                                        <a href="javascript:void(0)">Câu hỏi</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0)">Giao hàng</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0)">Hoàn trả</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0)">Trạng thái đặt hàng</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0)">Quà tặng</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-2 offset-lg-1 col-md-6 pt-10 pt-lg-0">
                            <div class="widget-item">
                                <h3 class="widget-title mb-5">Tài Khoản</h3>
                                <ul class="widget-list-item">
                                    <li>
                                        <a href="#">Thông tin</a>
                                    </li>
                                    <li>
                                        <a href="#">Thanh Toán</a>
                                    </li>
                                    <li>
                                        <a href="#">Danh sách ước</a>
                                    </li>
                                    <li>
                                        <a href="#">Điều khoản sử dụng</a>
                                    </li>
                                    <li>
                                        <a href="#">FAQ</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 pt-10 pt-lg-0">
                            <div class="widget-item">
                                <h3 class="widget-title mb-5">Bảng Tin</h3>
                                <p class="short-desc">Nhập Email của bạn vào đây để cập nhật các thông tin mới nhất</p>
                            </div>
                            <div class="widget-form-area">
                                <form class="widget-form" action="#">
                                    <input class="input-field" type="email" autocomplete="off" placeholder="Your Email">
                                    <div class="button-wrap pt-5">
                                        <button class="btn btn-custom-size btn-primary btn-secondary-hover rounded-0" id="mc-submit">Send Mail</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <footer style="text-align:center">
                    <p>&copy; @DateTime.Now.Year - Lập trình Web</p>
                </footer>
            </div>
        </div>
        <!-- Begin Scroll To Top -->
        <a class="scroll-to-top" href="">
            <i class="fa fa-chevron-up"></i>
        </a>
        <!-- Scroll To Top End Here -->
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/Scripts/jquery.validate.min.js")
        @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
        <!-- Vendor JS -->
        <script src="~/Content/assets/js/vendor/bootstrap.bundle.min.js"></script>
        <script src="~/Content/assets/js/vendor/jquery-3.5.1.min.js"></script>
        <script src="~/Content/assets/js/vendor/jquery-migrate-3.3.0.min.js"></script>
        <script src="~/Content/assets/js/vendor/modernizr-3.11.2.min.js"></script>
        <script src="~/Content/assets/js/vendor/jquery.waypoints.js"></script>

        <!--Plugins JS-->
        <script src="~/Content/assets/js/plugins/wow.min.js"></script>
        <script src="~/Content/assets/js/plugins/jquery-ui.min.js"></script>
        <script src="~/Content/assets/js/plugins/swiper-bundle.min.js"></script>
        <script src="~/Content/assets/js/plugins/jquery.nice-select.js"></script>
        <script src="~/Content/assets/js/plugins/parallax.min.js"></script>
        <script src="~/Content/assets/js/plugins/jquery.magnific-popup.min.js"></script>

        <!--Main JS (Common Activation Codes)-->
        <script src="~/Content/assets/js/main.js"></script>
    </div>
</body>
</html>